<%= form_with(model: @withdrawal) do |form| %>
  <div class="box">
    <% if @withdrawal.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@withdrawal.errors.count, "error") %> prohibited this withdrawal from being saved:</h2>
        <ul>
          <% @withdrawal.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form.fields_for :operation do |f|%>
      <div class="field">
        <%= f.label :value, class: "form-label" %>
        <%= f.number_field :value, step: 0.01, placeholder: "Value", value: 0, class: "form-control" %>
      </div>
    <% end %>

    <div class="field mt-3">
      <%= form.submit "Send", class: "btn btn-primary" %>
      <%= link_to "Cancel", root_path, class: "btn btn-secondary" %>
    </div>
  </div>
<% end %>
