<%= form_with(model: @operation) do |form| %>
  <div class="box">
    <% if @operation.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@operation.errors.count, "error") %> prohibited this operation from being saved:</h2>
        <ul>
          <% @operation.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :value, class: "form-label" %>
      <%= form.number_field :value, step: 0.01, placeholder: "Value", value: 0, class: "form-control" %>
    </div>

    <%= form.hidden_field :operable_type, value: operable_type %>

    <div class="field mt-3">
      <%= form.submit "Send", class: "btn btn-primary" %>
      <%= link_to "Cancel", root_path, class: "btn btn-secondary" %>
    </div>
  </div>
<% end %>
